<selection id="customer_index">
  <H1 class="page-title"> Danh sach khoan thu</H1>
  <% if notice %>
    <div class="alert alert-<%= name == :notice ? "success" : "danger" %>">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= content_tag :div, notice, :id => "<%= notice %>" %>
    </div>
</selection>
<table class = "table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Amount</th>
      <th>Content</th>
      <th colspan="2">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @revenues.each do |revenue| %>
      <tr>
        <td><%= link_to revenue.name, revenue_path(revenue) if revenue.name %></td>
        <td><%=  vn_to_currency(revenue.amount) %></td>
        <td><%= revenue.content %></td>
        <td><%= link_to "Chi Tiet", revenue_path(revenue) %></td>
    <% end %>
  </tbody>
</table>
